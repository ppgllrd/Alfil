<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="DrawerItem">
        <item name="android:textIsSelectable">false</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingRight">5dip</item>
    </style>

    <style name="DrawerCourse" parent="DrawerItem">
        <item name="android:background">@color/drawerCourseBackground</item>
        <item name="android:layout_marginBottom">2dip</item>
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <style name="DrawerCourseText" parent="DrawerCourse">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/drawerCourseText</item>
    </style>

    <style name="DrawerSection" parent="DrawerItem">
        <item name="android:background">@color/drawerSectionBackground</item>
        <item name="android:layout_marginBottom">2dip</item>
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <style name="DrawerSectionText" parent="DrawerSection">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/drawerSectionText</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StudentInfoPrimary">
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">22.0sp</item>
    </style>

    <style name="StudentInfoSecondary" >
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">20.0sp</item>
        <item name="android:layout_marginBottom">2dip</item>
        <item name="android:layout_marginTop">0dip</item>
    </style>

    <style name="StudentInfoTertiary"  >
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:layout_marginBottom">0dip</item>
        <item name="android:layout_marginTop">0dip</item>
    </style>

</resources>